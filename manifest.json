{
    "name": "Nebul GenAI",
    "version": "0.3",
    "manifest_version": 3,
    "description": "Nebul GenAI",
    "background": {
        "service_worker": "service-worker.js"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "icons": {
        "128": "images/icon-128.png",
        "16": "images/icon-16.png"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "permissions": [
        "sidePanel",
        "storage",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "*://*.huggingface.co/*",
        "*://*.hf.co/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.huggingface.co/*",
                "*://*.hf.co/*"
            ],
            "js": [
                "content-script.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "images/icon-128.png",
                "colors.css",
                "inference-calculator.js",
                "finetune-calculator.js",
                "sidepanel-init.js"
            ],
            "matches": [
                "*://*.huggingface.co/*",
                "*://*.hf.co/*"
            ]
        }
    ]
}