{
    "name": "Nebul GenAI",
    "version": "0.1",
    "manifest_version": 3,
    "description": "Nebul GenAI",
    "background": {
        "service_worker": "service-worker.js"
    },
    "icons": {
        "128": "images/icon-128.png",
        "16": "images/icon-16.png"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "permissions": [
        "sidePanel",
        "contextMenus",
        "storage",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "*://*.huggingface.co/*",
        "*://*.hf.co/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.huggingface.co/*",
                "*://*.hf.co/*"
            ],
            "js": [
                "content-script.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "images/icon-128.png",
                "colors.css"
            ],
            "matches": [
                "*://*.huggingface.co/*",
                "*://*.hf.co/*"
            ]
        }
    ]
}